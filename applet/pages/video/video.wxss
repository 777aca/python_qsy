.container {
  padding: 20px;
}

.result-title{
  display: inline-block;
  margin-bottom: 10px;
}
.result-desc{
  display: inline-block;
  margin-bottom: 10px;
}

.image-swiper {
  width: 560rpx;
  height: 700rpx;
  margin: 40rpx auto;
}

.gallery-image {
  width: 100%;
  height: 100%;
}

.result-image {
  width: 100%;
  height: auto;
}

.video-list {
  display: flex;
  flex-wrap: wrap;  
  gap: 10px;    
}

.video-item {
  position: relative;  
  width: 48%;  
}

.video-container {
  position: relative;
  display: grid;
}


.video-checkbox {
  position: absolute;
  top: 10px;
  left: 10px;
  z-index: 10;
}

.gallery-video {
  width: 100%;
  height: 150px; 
  object-fit: cover;
}

.result-title {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 20px;
  user-select: text;
}

.button-container button {
  margin-top: 10px;
}

.gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}