<view>
    <cu-custom bgColor="{{globalColor}}" bind:__l="__l" isBack="{{true}}" vueId="575e2f2a-1" vueSlots="{{['content']}}">
        <view slot="content">视频去水印</view>
    </cu-custom>
    <view class="text-area">
        <textarea catchinput="__e" data-event-opts="{{[ [ 'input',[ [ 'textareaBInput',['$event'] ] ] ] ]}}" maxlength="-1" placeholder="请输入视频或图片地址" style="height:160px;padding-left:10px;padding-top:10px;width:100%;" value="{{textareaAValue}}"></textarea>
    </view>
    <view class="box">
        <view class="cu-bar btn-group">
            <button bindtap="__e" class="{{['cu-btn',globalColor]}}" data-event-opts="{{[ [ 'tap',[ [ 'toSetData',['$event'] ] ] ] ]}}" style="color:white;height:35px;font-size:16px;">粘贴链接</button>
            <button bindtap="__e" class="{{['cu-btn','shadow',globalColor]}}" data-event-opts="{{[ [ 'tap',[ [ 'clearText',['$event'] ] ] ] ]}}" style="color:white;height:35px;font-size:16px;">清空链接</button>
        </view>
    </view>
    <view class="padding-sm flex flex-direction" style="margin-top:-8px;">
        <button bindtap="__e" class="{{['cu-btn','lg','',globalColor]}}" data-event-opts="{{[ [ 'tap',[ ['adAnalyse'] ] ] ]}}" style="color:white;height:35px;font-size:16px;">立即解析</button>
    </view>
    <view class="teach">
        <text bindtap="__e" data-event-opts="{{[ [ 'tap',[ [ 'page',[1] ] ] ] ]}}">学习去水印教程</text>
    </view>
    <view wx:if="{{result}}">
        <view class="padding-sm">
            <video class="video-play" poster="{{cover}}" src="{{videoUrl}}"></video>
        </view>
        <cmd-progress bind:__l="__l" custom="{{true}}" percent="{{percent}}" strokeColor="white" successPercent="{{percent}}" vueId="575e2f2a-2" vueSlots="{{['default']}}">
            <text style="color:#009688;">{{percent+'%'}}</text>
        </cmd-progress>
        <view class="box">
            <view class="cu-bar btn-group">
                <button bindtap="__e" class="cu-btn bg-orange shadow-blur" data-event-opts="{{[ [ 'tap',[ [ 'copyMvUrl',['$event'] ] ] ] ]}}" style="height:30px;font-size:16px;">复制无水印链接</button>
                <button bindtap="__e" class="cu-btn bg-green shadow" data-event-opts="{{[ [ 'tap',[ [ 'downFile',[1,'$0'],['videoUrl'] ] ] ] ]}}" style="height:30px;font-size:16px;">保存到手机</button>
            </view>
        </view>
        <view class="box" wx:if="{{null!=cover}}">
            <view class="cu-bar btn-group">
                <button bindtap="__e" class="cu-btn bg-blue shadow-blur" data-event-opts="{{[ [ 'tap',[ [ 'copyMusic',[3,'$0'],['cover'] ] ] ] ]}}" style="height:30px;font-size:16px;" wx:if="{{null!=cover}}">复制封面链接</button>
                <button bindtap="__e" class="cu-btn bg-grey shadow" data-event-opts="{{[ [ 'tap',[ [ 'downFile',[2,'$0'],['cover'] ] ] ] ]}}" style="height:30px;font-size:16px;" wx:if="{{null!=cover}}">保存封面</button>
            </view>
        </view>
        <view class="box">
            <view class="cu-bar btn-group">
                <button bindtap="__e" class="cu-btn bg-blue shadow-blur" data-event-opts="{{[ [ 'tap',[ ['copyTitle'] ] ] ]}}" style="height:30px;font-size:16px;" wx:if="{{null!=cover}}">复制标题</button>
            </view>
        </view>
        <view bindtap="__e" class="teach" data-event-opts="{{[ [ 'tap',[ [ 'page',[27] ] ] ] ]}}" style="width:100%;height:20px;">
            <text>下载失败？点我查看下载教程</text>
        </view>
    </view>
    <view style="margin-top:8px;" wx:if="{{showAd}}">
        <ad-custom bind:__l="__l" unitId="{{ad}}" vueId="575e2f2a-3"></ad-custom>
    </view>
    <privacy-popup bind:__l="__l" bind:agree="__e" class="vue-ref" data-event-opts="{{[ [ '^agree',[ ['checkAction'] ] ] ]}}" data-ref="privacyPopup" vueId="575e2f2a-4"></privacy-popup>
</view>
