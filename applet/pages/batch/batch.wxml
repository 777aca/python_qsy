<view>
    <cu-custom bgColor="{{globalColor}}" bind:__l="__l" isBack="{{true}}" vueId="f1a79a6c-1" vueSlots="{{['content']}}">
        <view slot="content">视频转gif</view>
    </cu-custom>
    <view class="solids video padding-sm">
        <view bindtap="__e" data-event-opts="{{[ [ 'tap',[ [ 'upload',['$event'] ] ] ] ]}}">
            <text class="cuIcon-cameraadd" style="font-size:40px;"></text>
        </view>
        <view bindtap="__e" data-event-opts="{{[ [ 'tap',[ [ 'upload',['$event'] ] ] ] ]}}">
            <text>点我上传视频</text>
        </view>
    </view>
    <view class="padding-sm" wx:if="{{result}}">
        <video class="video-play" src="{{tempFilePath}}"></video>
    </view>
    <view class="padding-sm" wx:if="{{showMusic}}">
        <image src="{{resultImg}}"></image>
    </view>
    <view bindtap="__e" class="padding-sm flex flex-direction" data-event-opts="{{[ [ 'tap',[ ['complete'] ] ] ]}}" style="margin-top:-7px;" wx:if="{{result}}">
        <button class="cu-btn bg-cyan">开始转gif</button>
    </view>
    <view class="box" wx:if="{{showMusic}}">
        <cmd-progress bind:__l="__l" custom="{{true}}" percent="{{percent}}" strokeColor="white" successPercent="{{percent}}" vueId="f1a79a6c-2" vueSlots="{{['default']}}">
            <text style="color:#009688;">{{percent+'%'}}</text>
        </cmd-progress>
        <view class="cu-bar btn-group">
            <button bindtap="__e" class="cu-btn bg-orange shadow-blur" data-event-opts="{{[ [ 'tap',[ [ 'copyMusic',['$event'] ] ] ] ]}}">复制图片链接</button>
            <button bindtap="__e" class="cu-btn bg-green shadow" data-event-opts="{{[ [ 'tap',[ [ 'downloadFile',['$event'] ] ] ] ]}}">保存到相册</button>
        </view>
    </view>
</view>
