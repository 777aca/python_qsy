.container {
  padding: 20px;
}

.page-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  border: 1px solid #ddd;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 5px;
  background-color: #f9f9f9;
  cursor: pointer;
}

.history-title {
  font-size: 18px;
  font-weight: bold;
}

.history-desc {
  font-size: 14px;
  color: #666;
}

.history-time {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.no-records {
  text-align: center;
  color: #aaa;
  font-size: 16px;
}
