<view class="{{['cropper',show?'show':'']}}" id="cropper">
    <view class="cropper-body">
        <image class="cropper-image" id="image" mode="aspectFit" src="{{imagePath}}"></image>
        <view catchtouchmove="__e" catchtouchstart="__e" class="cropper-stage" data-event-opts="{{[ [ 'touchstart',[ [ 'touchStart',['$event'] ] ] ],[ 'touchmove',[ [ 'touchMove',['$event'] ] ] ] ]}}" style="{{'width:'+stageWidth+'px'+';'+'height:'+stageHeight+'px'+';'+'left:'+stageLeft+'px'+';'+'top:'+stageTop+'px'+';'}}" wx:if="{{showCut}}">
            <view class="cropper-box" id="box" style="{{'width:'+boxWidth+'px'+';'+'height:'+boxHeight+'px'+';'+'left:'+boxLeft+'px'+';'+'top:'+boxTop+'px'+';'}}">
                <view class="lt" id="lt"></view>
                <view class="lb" id="lb"></view>
                <view class="rt" id="rt"></view>
                <view class="rb" id="rb"></view>
                <view class="line-v" style="left:33.3%;"></view>
                <view class="line-v" style="left:66.6%;"></view>
                <view class="line-h" style="top:33.3%;"></view>
                <view class="line-h" style="top:66.6%;"></view>
            </view>
        </view>
        <canvas canvasId="canvas" class="cropper-canvas" style="{{'height:'+canvasHeight+'px'+';'+'width:'+canvasWidth+'px'+';'}}"></canvas>
    </view>
    <view class="cropper-bottom">
        <view bindtap="__e" class="cropper-btn cropper-cancel" data-event-opts="{{[ [ 'tap',[ [ 'cancelCrop',['$event'] ] ] ] ]}}">取消</view>
        <view bindtap="__e" class="cropper-btn cropper-ok bg" data-event-opts="{{[ [ 'tap',[ [ 'completeCrop',['$event'] ] ] ] ]}}">确认</view>
    </view>
</view>
